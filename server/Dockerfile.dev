FROM node:20-alpine

RUN mkdir -p /opt/app && chown -R 777 /opt/app && \
    mkdir -p /opt/app

WORKDIR /opt/app

COPY package*.json ./
RUN npm install \
    && npm cache clean --force

COPY config ./config
COPY custom_typings ./custom_typings
COPY src ./src
COPY tests ./tests
COPY tsconfig.dev.json ./
COPY package.json ./

EXPOSE 3000
