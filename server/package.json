{
  "name": "server",
  "version": "1.0.0",
  "packageManager": "yarn@4.1.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "node -p \"'export const APP_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "npx tsc && tsc-alias -p tsconfig.json",
    "dev:build": "npx tsc -p tsconfig.dev.json && npx tsc-alias -p tsconfig.dev.json",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "dev:debug:docker": "NODE_ENV=development DEBUG='*' nodemon -L --inspect=0.0.0.0:9229 src/server.ts",
    "dev:build:docker": "npx tsc -p tsconfig.dev.json && npx tsc-alias -p tsconfig.dev.json && cp -r src/sql build-debug/sql",
    "dev:start:docker": "node build-debug/server.js",
    "test": "jest --watch --coverage --config jest.config.ts",
    "test-ci": "jest --coverage --config jest.config.ts",
    "lint": "eslint --fix \"src/**/*.ts\" && tsc --noEmit",
    "lint:prettier": "prettier --write \"src/**/*.ts\"",
    "healthcheck": "node dist/utils/server/healthcheck.js"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "log4js": "^6.9.1",
    "pg": "^8.11.1",
    "redoc-express": "^2.1.0",
    "swagger-themes": "^1.4.3",
    "swagger-ui-express": "^5.0.0",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/amqplib": "^0.10.1",
    "@types/eslint": "^8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "prettier-plugin-sql": "^0.18.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3.3"
  }
}
