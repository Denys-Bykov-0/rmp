{
    "configurations": [
        {
            "name": "Node.js: Nodemon debug",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/server",
            "runtimeArgs": [
                "run",
                "dev"
            ],
        },
        {
            "name": "Node.js: Attach",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}/server",
        },
        {
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "name": "Docker: Attach to Node",
            "remoteRoot": "/opt/upVibe",
            "localRoot": "${workspaceFolder}/server"
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/server/package.json",
                "localRoot": "${workspaceFolder}/server"
            }
        },
    ]
}
