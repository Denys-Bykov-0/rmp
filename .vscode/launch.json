{
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "name": "Docker: Attach to Node",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}/server"
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/server/package.json",
                "localRoot": "${workspaceFolder}/server"
            }
        },
    ]
}
