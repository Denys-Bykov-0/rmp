{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/server/Dockerfile.dev",
				"context": "${workspaceFolder}/server",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/server/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/server/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				},
				"command": "npm run dev:start:docker",
				"containerName": "up-vibe-server-dev",
				"restart": "on-failure",
				"volumes": [
					{
						"localPath": "/home/sowa/Work/Projects/upVibe-private-workers/plugins/dist",
						"containerPath": "/usr/src/app/plugins"
					},
					{
						"localPath": "${workspaceFolder}/server/src",
						"containerPath": "/usr/src/app/src"
					}
				],
				"ports": [
					{
						"hostPort": 3000,
						"containerPort": 3000
					},
					{
						"hostPort": 9229,
						"containerPort": 9229
					}
				],
			},
			"node": {
				"package": "${workspaceFolder}/server/package.json",
				"enableDebugging": true
			}
		},
	]
}
